<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/backuniversal"
    tools:context=".FormSportsmanView">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarAnketaView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/topclientsanketa"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="612dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="10dp"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbarAnketaView"
        app:layout_constraintVertical_bias="0.234">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imageView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:src="@drawable/age" />

            <TextView
                android:id="@+id/age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:background="@drawable/field"
                android:paddingStart="25dp"
                android:paddingTop="10dp"
                android:paddingEnd="30dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/experience" />

            <TextView
                android:id="@+id/expTr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:background="@drawable/field"
                android:maxLength="50"
                android:paddingStart="25dp"
                android:paddingEnd="30dp"
                android:paddingTop="10dp"
                android:textColor="#FFFFFF"
                android:textSize="24sp"/>


            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:src="@drawable/goals" />

            <TextView
                android:id="@+id/goals"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:background="@drawable/field"
                android:maxLength="50"
                android:paddingStart="25dp"
                android:paddingEnd="30dp"
                android:paddingTop="10dp"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                />

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:src="@drawable/donteat" />

            <TextView
                android:id="@+id/dontEat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:background="@drawable/field"
                android:maxLength="30"
                android:paddingStart="25dp"
                android:paddingEnd="30dp"
                android:paddingTop="10dp"
                android:textColor="#FFFFFF"
                android:textSize="24sp"/>

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/height" />

            <TextView
                android:id="@+id/heightAnketa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginBottom="15dp"
                android:background="@drawable/field"
                android:maxLength="3"
                android:paddingStart="25dp"
                android:paddingEnd="30dp"
                android:paddingTop="10dp"
                android:textColor="#FFFFFF"
                android:textSize="24sp"/>

            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="wrap_content"
                android:layout_height="17dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/weight" />

            <TextView
                android:id="@+id/anketaWeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:background="@drawable/field"
                android:maxLength="3"
                android:paddingStart="25dp"
                android:paddingEnd="30dp"
                android:paddingTop="10dp"
                android:textColor="#FFFFFF"
                android:textSize="24sp"/>

            <ImageView
                android:id="@+id/imageView16"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginBottom="5dp"
